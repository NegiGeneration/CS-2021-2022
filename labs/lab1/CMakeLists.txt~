
cmake_minimum_required(VERSION 3.16.3)

project("Lab 1"
  VERSION 0.0.0
  DESCRIPTION "CS 1521 Lab 1"
  LANGUAGES CXX)

add_compile_options(-Wall -Wextra -Wpendantic)

set(CMAKE_CXX_STANDARD 14)
set(CMAKE_CXX_STANDARD_REQUIRED ON)
set(CMAKE_CXX_EXTENSIONS OFF)

add_executable(lab1
  board.cpp
  game.cpp
  main.cpp
  player.cpp)



